// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model UserFeedback {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  name    String  @unique
  ranking Int
  message String
  status  Boolean
}

model Newsletter {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  email      String
  first_name String?
  last_name  String?
}

model FaleConosco {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  phone     String
  message   String
  timestamp DateTime @default(now())
}
